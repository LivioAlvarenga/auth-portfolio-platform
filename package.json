{
  "name": "produtivese-adm",
  "version": "1.0.0",
  "description": "area administrativa de adm.produtivese.com.br",
  "author": "Livio Alvarenga",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate --migrations-dir src/infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir src/infra/migrations --envPath .env.development up",
    "wait-for-postgres": "ts-node src/infra/scripts/wait-for-postgres.ts"
  },
  "dependencies": {
    "@auth/pg-adapter": "^1.4.1",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@react-email/components": "^0.0.22",
    "async-retry": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.408.0",
    "next": "14.2.4",
    "next-auth": "^5.0.0-beta.19",
    "next-themes": "^0.3.0",
    "node-pg-migrate": "^7.5.2",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "react": "^18",
    "react-dom": "^18",
    "react-email": "^2.1.6",
    "react-hook-form": "^7.52.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/async-retry": "^1.4.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
